<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <ScrollView
        android:id="@+id/scrollViewTodo"
        android:layout_width="match_parent"
        android:layout_height="403dp"
        android:background="#ffffff"
        android:layout_x="0dp"
        android:layout_y="155dp"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        tools:layout_editor_absoluteX="-4dp">

        <LinearLayout
            android:id="@+id/allInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" />
    </ScrollView>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteBack"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/cpb_grn"
            android:indeterminate="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="361dp"
        android:layout_height="132dp"
        android:layout_x="0dp"
        android:layout_y="40dp"
        android:background="@drawable/small_lay_custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_x="90dp"
        android:layout_y="24dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="Pedidos"
        android:layout_marginTop="7dp"
        android:textColor="#646464"
        android:textSize="26sp"
        app:fontFamily="@font/pop_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView31" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_x="0dp"
        android:layout_y="560dp"
        android:background="@drawable/small_lay_custom_wh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnSegui"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="14dp"
        android:layout_x="17dp"
        android:layout_y="564dp"
        android:background="#ffffff"
        android:scaleType="fitCenter"
        android:tint="#69F0AE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView29"
        app:srcCompat="@drawable/ic_shopping_bag_solid" />

    <ImageButton
        android:id="@+id/btnPerfil3"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="14dp"
        android:layout_x="287dp"
        android:layout_y="562dp"
        android:alpha=".8"
        android:background="#ffffff"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_user_solid"
        android:tint="#646464"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView29" />

    <ImageButton
        android:id="@+id/btnMas3"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="14dp"
        android:layout_x="152dp"
        android:layout_y="560dp"
        android:alpha=".8"
        android:background="#ffffff"
        android:scaleType="fitCenter"
        android:tint="#646464"
        app:layout_constraintBottom_toBottomOf="@+id/textView29"
        app:layout_constraintEnd_toStartOf="@+id/btnPerfil3"
        app:layout_constraintStart_toEndOf="@+id/btnSegui"
        app:srcCompat="@drawable/ic_search_solid" />

    <TextView
        android:id="@+id/textViewBuscando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_x="276dp"
        android:layout_y="110dp"
        android:fontFamily="@font/pop_med"
        android:gravity="center"
        android:text="Solicitado"
        android:textColor="#69f0ae"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/btnBuscando"
        app:layout_constraintTop_toTopOf="@+id/btnBuscando" />

    <TextView
        android:id="@+id/textViewTerminados"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="50dp"
        android:layout_x="141dp"
        android:layout_y="116dp"
        android:fontFamily="@font/pop_med"
        android:text="Terminado"
        android:textColor="#646464"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/btnTerminados"
        app:layout_constraintTop_toTopOf="@+id/btnTerminados" />

    <TextView
        android:id="@+id/textViewCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:layout_x="25dp"
        android:layout_y="116dp"
        android:fontFamily="@font/pop_med"
        android:text="En curso"
        android:textColor="#646464"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/btnCurso"
        app:layout_constraintTop_toTopOf="@+id/btnCurso" />

    <ImageButton
        android:id="@+id/btnCurso"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="8dp"
        android:layout_x="24dp"
        android:layout_y="65dp"
        android:backgroundTint="#f5f5f5"
        android:scaleType="fitCenter"
        android:tint="#646464"
        app:layout_constraintEnd_toStartOf="@+id/btnTerminados"
        app:layout_constraintStart_toEndOf="@+id/btnBuscando"
        app:layout_constraintTop_toTopOf="@+id/textView31"
        app:srcCompat="@drawable/ic_people_carry_solid" />

    <ImageButton
        android:id="@+id/btnTerminados"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginEnd="24dp"
        android:layout_x="153dp"
        android:layout_y="64dp"
        android:backgroundTint="#f5f5f5"
        android:scaleType="fitCenter"
        android:tint="#646464"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnCurso"
        app:srcCompat="@drawable/ic_check_square_regular" />

    <ImageButton
        android:id="@+id/btnBuscando"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_x="282dp"
        android:layout_y="64dp"
        android:backgroundTint="#f5f5f5"
        android:scaleType="fitCenter"
        android:tint="#69F0AE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnCurso"
        app:srcCompat="@drawable/ic_street_view_solid" />

</android.support.constraint.ConstraintLayout>